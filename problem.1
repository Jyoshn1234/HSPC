#include<stdio.h>
#include<math.h>

int input_no(); 
void input_values(float *x1, float *y1, float *x2, float *y2,float *x3, float *y3); 
void area(float x1, float y1, float x2, float y2,float x3, float y3, float *sum);
void output(float x1, float y1, float x2, float y2,float x3, float y3, float sum);


int main(){
  int p;
  p = input_no();
  
      float x1,y1,x2,y2,x3,y3,sum;
      input_values(&x1,&y1,&x2,&y2,&x3,&y3);
      area(x1,y1,x2,y2,x3,y3,&sum);
      output(x1,y1,x2,y2,x3,y3,sum);
    
  return 0;
}

int input_no(){
  int p;
  //printf("Enter the number of rectangles:\n");
  scanf("%d", &p);
  return p;
}
void input_values(float *x1, float *y1, float *x2, float *y2,float *x3, float *y3){
  for(int i=0;i<p;i++)
  scanf("%f", x1);
  scanf("%f", y1);
  scanf("%f", x2);
  scanf("%f", y2);
  scanf("%f", x3);
  scanf("%f", y3);
}

void area(float x1, float y1, float x2, float y2,float x3, float y3, float *sum){
  sum = (x1(y2-y3)+x2*(y3-y1)+x3*(y1-y2))*0.5;
  *sum = fabs((*sum*2)*(-1));
}


void output(float x1, float y1, float x2, float y2,float x3, float y3, float sum){
  printf("The area of the rectangle with vertices (%f,%f),(%f,%f), (%f,%f) is %f.\n", x1,y1,x2,y2,x3,y3,sum);
}
